<h1>Welcome to Contact App!</h1>
<h4>v1.0.0</h4>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Phone Number</th>
    </tr>
  </thead>
  <tbody>
    <% let n=1; for (contact of data) { %>
    <tr>
      <th scope="row"><%= n %></th>
      <td>
        <%= contact.name %> <% if (contact.isFav) {%>
        <span class="badge bg-warning">favourite</span>
        <% } %>
      </td>
      <td><%= contact.phoneNum %></td>
      <td>
        <a href="detail/<%= contact._id %>"
          ><button type="button" class="btn btn-primary">Detail</button></a
        >
        <a href="/<%= contact._id %>"
          ><button type="button" class="btn btn-success">Update</button></a
        >
        <form action="/:id?_method=DELETE" method="post" class="d-inline">
          <input type="hidden" name="_id" value="<%= contact._id  %>" />
          <button
            type="submit"
            class="btn btn-danger"
            onclick="confirm('Are you sure?')"
          >
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% n++; } %>
  </tbody>
  <a href="/add">
    <button type="button" class="btn btn-secondary">Add New Contact</button>
  </a>
</table>
